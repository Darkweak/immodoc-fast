<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block stylesheet %}{% endblock %}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('/assets/css/main.css') }}">
    <meta name="description"
          content="{{ description|default("Ma description du site") }}"/>
    <script src="https://js.stripe.com/v3/"></script>

    <title>{{ title|default(app_name ~ ' - Vos documents immobilier') }}</title>
</head>
<body>
{% include './Static/navbar.html.twig' %}
{% include './Image/image.html.twig' %}

{% block content %}{% endblock %}

{% include './Static/footer.html.twig' %}

<div class="position-fixed scrollToTop bg-primary-50 transition d-none pointer" id="scrollToTop" onclick="scrollToTop()">
    <h1 class="text-center">
        <i class="fas fa-caret-up text-white"></i>
    </h1>
</div>

<script>
    function scrollToTop() {
        const c = window.scrollY;
        if (c > 0) {
            window.requestAnimationFrame(scrollToTop);
            window.scrollTo(0, c - c / 5);
        }
    }

    window.addEventListener('scroll', function () {
        let scrollElement = document.getElementById('scrollToTop');
        if (window.scrollY > 100) {
            if (!scrollElement.classList.contains('d-block') || scrollElement.classList.contains('d-none')) {
                scrollElement.classList.remove('d-none');
                scrollElement.classList.add('d-block');
            }
        } else {
            if (!scrollElement.classList.contains('d-none') || scrollElement.classList.contains('d-block')) {
                scrollElement.classList.remove('d-block');
                scrollElement.classList.add('d-none');
            }
        }
    })
</script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
{% block javascript %}{% endblock %}
</body>
</html>
