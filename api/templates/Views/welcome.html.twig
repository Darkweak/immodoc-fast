{% extends 'base.html.twig' %}

{% set cards = [
    {
        icon: "file-alt",
        text: "Tous les mandats nécessaires pour votre activité réunis au même endroit",
        type: "far"
    },
    {
        custom: "7/7",
        text: "Rapide, simple d'utilisation, une disponibilité 24/7"
    }
] %}

{% block content %}
    <div class="container">
        <div class="row m-0 py-5">
            <div class="col-12 primary-50 text-center d-flex">
                <h1 class="display-4 m-auto">
                    Le service {{ app_name }}
                    <div class="dropdown-divider m-0"></div>
                </h1>
            </div>
            <div class="col-md-8 offset-md-2">
                <div class="row m-0">
                    {% for card in cards %}
                        <div class="col-md-6 py-3 primary-50">
                            <div class="card shadow h-100">
                                <div class="card-body">
                                    <div class="col-10 offset-1 text-center">
                    <span class="display-2 font-weight-500">
                        {% if card.custom is defined %}
                            {{ card.custom }}
                        {% else %}
                            <i class="{{ card.type|default('fas') }} fa-{{ card.icon }}"></i>
                        {% endif %}
                    </span>
                                    </div>
                                    <h3 class="card-title pt-3 text-center">
                                        {{ card.text }}
                                    </h3>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="bg-primary-50 py-5 text-light">
        <div class="text-center d-flex">
            <span class="display-4 m-auto">
                Les fichiers disponibles
                <div class="dropdown-divider m-0 primary-50"></div>
            </span>
        </div>
        {% set selectable = true %}
        {% include '/Components/Views/File.html.twig' %}
    </div>
    <div class="bg-light">
        <div class="container py-5">
            {% include '/Components/Views/Contact.html.twig' %}
        </div>
    </div>
{% endblock %}
